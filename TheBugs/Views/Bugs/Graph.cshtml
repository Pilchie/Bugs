@model IEnumerable<RoachIssue>
@using System.Text;

@{ 
    ViewBag.Title = "Assigned Graph";

    var title = $"Assigned Issues";
    var header = $"Developer,Count";

    var builder = new StringBuilder();
    foreach (var group in Model.GroupBy(x => x.Assignee))
    {
        var count = group.Count();
        if (builder.Length > 0)
        {
            builder.Append(";");
        }

        builder.Append($"{group.Key},{count}");
    }
}

<div>
    <h2>Assigned Bugs</h2>
</div>

<div id="pie_chart" style="width: 900px; height: 500px" data-title="@title" data-header="@header" data-values="@builder.ToString()" />

@section scripts {
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/Charts/pie-chart.js")"></script>
}




